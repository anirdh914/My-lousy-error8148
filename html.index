<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Trending Colour</title>
    <style>
        body {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            font-family: Arial, sans-serif;
            transition: background-color 0.5s;
        }
        #colour-box {
            width: 300px;
            height: 300px;
            border-radius: 20px;
            display: flex;
            justify-content: center;
            align-items: center;
            font-size: 24px;
            color: white;
            text-shadow: 1px 1px 3px black;
        }
        button {
            margin-top: 20px;
            padding: 10px 20px;
            font-size: 18px;
            cursor: pointer;
        }
    </style>
</head>
<body>
    <div>
        <div id="colour-box">#FFFFFF</div>
        <button onclick="generateColour()">Get Trending Colour</button>
    </div>

    <script>
        function generateColour() {
            // Random trending colour logic (replace with your prediction system later)
            const colours = ['#FF0000', '#0000FF', '#00FF00', '#FFFF00', '#FF00FF'];
            const randomIndex = Math.floor(Math.random() * colours.length);
            const selected = colours[randomIndex];

            document.getElementById('colour-box').style.backgroundColor = selected;
            document.getElementById('colour-box').textContent = selected;
            document.body.style.backgroundColor = selected + '33'; // light background effect
        }
    </script>
</body>
</html>
